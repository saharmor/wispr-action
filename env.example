# Anthropic Claude API Key
ANTHROPIC_API_KEY=your_api_key_here

# LLM Model (default: claude-haiku-4-5, all Anthropic models are supported)
LLM_MODEL=claude-haiku-4-5

# Wispr Flow Database Path (default: ~/Library/Application Support/Wispr Flow/flow.sqlite)
# Note: Quote paths that contain spaces
WISPR_DB_PATH="~/Library/Application Support/Wispr Flow/flow.sqlite"

# Activation word that triggers command processing
ACTIVATION_WORD=command

# Polling interval in seconds
POLL_INTERVAL=1.5

# Web UI port (default: 9000)
WEB_PORT=9000

# Enable confirmation mode for testing (true/false)
CONFIRM_MODE=false

# Read command name aloud before execution using macOS voice (true/false)
READ_COMMAND_ALOUD=true

# Text-to-Speech Configuration
# TTS_PROVIDER: "apple" (macOS built-in) or "cartesia" (Cartesia AI)
TTS_PROVIDER=apple

# Cartesia API Configuration (only needed if TTS_PROVIDER=cartesia)
CARTESIA_API_KEY=your_cartesia_api_key_here
CARTESIA_MODEL_ID=sonic-3
CARTESIA_VOICE_ID=a0e99841-438c-4a64-b679-ae501e7d6091

